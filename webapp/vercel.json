{
  "version": 2,
  "name": "telegram-bot-webapp",
  "buildCommand": "bash build-env.sh",
  "outputDirectory": ".",
  "installCommand": "echo 'No install needed'",
  "framework": null,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "*.js",
      "use": "@vercel/static"
    },
    {
      "src": "*.css",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "ENV_BACKEND_URL": "@env_backend_url"
  }
}
